<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Background="Pink"
        Title="EvaChat" Height="350" Width="525" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" Background="DeepPink" Foreground="White" HorizontalAlignment="Left" Height="29" Margin="172,10,0,0" TextWrapping="Wrap" FontSize="18" Text="Username" VerticalAlignment="Top" Width="335"/>
        <Button x:Name="bConnDicon" Background="HotPink" Foreground="White" FontSize="18" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="147" Height="29"/>
        <ListBox x:Name="lbChat" Background="#FF800045" HorizontalAlignment="Left" Height="181" Margin="10,44,0,0" VerticalAlignment="Top" Width="497" Foreground="#FFFDFDFD" FontSize="14"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="79" Margin="10,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497" KeyDown="tbMessage_KeyDown" Background="#FF5A0131" Foreground="White" FontSize="14"/>

    </Grid>
</Window>
